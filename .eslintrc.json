{
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "no-await-in-loop": "error",
        "require-atomic-updates": "error",
        "array-callback-return": "error",
        "default-case": "error",
        "no-alert": "error",
        "quotes": ["error", "single"],
        "max-len": ["error", { "code": 120 }],
        "space-before-blocks": "error",
        "space-unary-ops":[
            1, {
                "overrides": {
                    "typeof": false
                }
            }
        ],
        "operator-linebreak": [
            "error", "after", {
                "overrides": { "?": "before", ":": "before" }
            }
        ],
        "quote-props": ["error", "always"],
        "no-useless-escape":"error",
        "camelcase":"error"
    }
}