{
  "rulesDirectory": [ "tslint-plugin-prettier" ],
  "linterOptions": {
    "exclude": [
        "node_modules/**",
        "dist/**"
    ]
  },
  "rules": {
    "prettier": [
      true, {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120
      }
    ]
  }
}